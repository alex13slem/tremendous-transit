---
import { companyInfoWRelations } from '../store/companyInfo';
import type { OpenGraphProps } from '../types/open-graph';
import OpenGraph from './OpenGraph.astro';

interface Props extends Omit<OpenGraphProps, 'siteName'> {
  keywords?: string;
}

const { keywords, description, title, ...props } = Astro.props;

const { title: siteName, description: siteDescription } = companyInfoWRelations;
---

<>
  {keywords && <meta name="keywords" content={keywords} />}
  <meta name="description" content={description || siteDescription} />
  <OpenGraph
    description={description || siteDescription}
    {siteName}
    {title}
    {...props}
  />

  <title>{siteName} â€¢ {title}</title>
</>
